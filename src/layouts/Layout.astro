---
import "@styles/global.scss";
import Header from '@components/global/Header.astro'
import Footer from '@components/global/Footer.astro'
import BaseHead from '@/layouts/BaseHead.astro';
import OpenGraph from '@assets/open-graph.jpg';
import { menu } from "@/i18n/default";
import { getLangFromUrl } from '@i18n/utils';
const { current_page } = Astro.props;
const lang = getLangFromUrl(Astro.url);

interface Props {
	title: string;
}
---
<!doctype html>
<html lang={lang}>
	<BaseHead title={menu[lang][current_page].name} description="Imexpharm | Báo cáo thường niên 2023" image={OpenGraph}/>
	<body>
		<Header />
		<main>
			<slot/>
		</main>
		<Footer current_page={current_page}>
		<script>
			import AOS from 'aos';
			import main from "@/js/main";
			AOS.init({
				offset: 120, // offset (in px) from the original trigger point
				delay: 0, // values from 0 to 3000, with step 50ms
				duration: 600, // values from 0 to 3000, with step 50ms
				easing: 'ease-in', // default easing for AOS animations
			});
			main();
		</script>
	</body>
</html>
