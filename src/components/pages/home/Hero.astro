---
import { Image } from 'astro:assets';
import HeroContent from '@assets/ui/home/home-hero.svg'
import HeroBackground from '@assets/ui/home/hero-bg.jpg'
import HeroContentMB from '@assets/ui/home/home-hero-mb.svg'
import HeroBackgroundMB from '@assets/ui/home/hero-bg-mb.jpg'
---
<section class="hero">
    <div class="container negative">
        <div class="hero-wrap">
            <Image src={HeroBackground} loading="eager" alt="hero bg" class="img is-desk" />
            <Image src={HeroContent} loading="eager" alt="hero content" class="img is-desk" data-aos="fade-up" />
            <Image src={HeroBackgroundMB} loading="eager" alt="hero content" class="img is-mb" />
            <Image src={HeroContentMB} loading="eager" alt="hero content" class="img is-mb" data-aos="fade-up"  />
        </div>
    </div>
</section>

<style lang="scss">
    @use "@styles/mixins" as *;
    .hero {
        &-wrap {
            display: grid;
            grid-template-columns: 1fr;
            margin-inline: -24rem;
            width: calc(100% + 48rem);
            @include md {
                margin-inline: -30rem;
                width: calc(100% + 60rem);
            }
            @include sm {
                margin-inline: calc(var(--container-padding) * -1);
                width: calc(100% + var(--container-padding) * 2);
            }
            > * {
                grid-area: 1/1/2/2;
            }
        }
    }
</style>
