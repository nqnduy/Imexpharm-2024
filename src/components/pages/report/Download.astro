---
import { Image } from 'astro:assets';
import DownloadTitle from '@assets/ui/report/download-title.svg';
import DownloadVN from '@assets/ui/report/download-link-vn.svg';
import DownloadEN from '@assets/ui/report/download-link-en.svg';
import DownloadBtn from '@assets/ui/report/download-btn.svg';

---
<section class="download">
    <div class="container">
        <div class="download-wrap">
            <Image src={DownloadTitle} alt="text" class="img is-desk" />
            <div class="grid grid-1">
                <Image src={DownloadVN} alt="text" class="img is-desk" />
                <a href="#" class="download__btn">
                    <Image src={DownloadBtn} alt="download link" class="img is-desk" />
                </a>
            </div>
            <div class="grid grid-1">
                <Image src={DownloadEN} alt="text" class="img is-desk" />
                <a href="#" class="download__btn">
                    <Image src={DownloadBtn} alt="download link" class="img is-desk" />
                </a>
            </div>
        </div>
    </div>
</section>

<style lang="scss">
    @use '@styles/colors' as *;
    .download {
        background-color: $cl-white;
        padding: 8.8rem 0 27.6rem;
        &-wrap {
            display: flex;
            flex-direction: column;
            gap: 4rem 0;
        }
        .grid {
            align-items: center;
        }
        &__btn {
            width: 15.4rem;
            justify-self: end;
            margin-right: 4.8rem;
            transition: transform 0.4s ease-in-out;
            &:hover {
                transform: scale(.98);
            }
        }
    }
</style>
