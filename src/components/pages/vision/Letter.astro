---
import { Image } from 'astro:assets';
import LetterIntroContent from '@assets/ui/vision/letter-content.svg'
import LetterIntroImage from '@assets/ui/vision/letter-intro.jpg'
import LetterDetail1 from '@assets/ui/vision/detail-1.svg'
import LetterDetail2 from '@assets/ui/vision/detail-2.svg'
import LetterDetail3 from '@assets/ui/vision/detail-3.svg'

---
<section class="letter">
    <div class="container">
        <div class="letter__intro">
            <Image src={LetterIntroImage} alt="letter woman" class="img is-desk" />
            <Image src={LetterIntroContent} alt="letter content" class="img is-desk" />
        </div>
        <div class="letter__detail">
            <Image src={LetterDetail1} alt="detail letter content" class="img is-desk" />
            <Image src={LetterDetail2} alt="detail letter content" class="img is-desk" />
            <Image src={LetterDetail3} alt="detail letter content" class="img is-desk" />
        </div>
    </div>
</section>

<style lang="scss">
    @use '@styles/colors' as *;
    .letter {
        padding-block: 8.8rem;
        background-color: $cl-white;
        &__intro {
            display: grid;
            grid-template-columns: 1fr;
            margin-bottom: 4rem;
            > * {
                grid-area: 1/1/2/2;
            }
        }
        &__detail {
            display: flex;
            flex-direction: column;
            gap: 4rem 0;
        }
    }
</style>