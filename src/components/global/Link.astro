---
const { link, text, revert } = Astro.props;
---
<a href={link} class="main-link"
    style={{ flexDirection: `${revert ? 'row-reverse' : 'reverse'}`, color: `${revert ? '#fff' : '#24CBFF'}`  }}
>
    <span class="heading txt txt-14 txt-link">{text}</span>
    <svg
        style={{ transform: `rotate(${revert ? 180 : 0}deg)` }}
        width="100%" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M8.29498 16.59L12.875 12L8.29498 7.41L9.70498 6L15.705 12L9.70498 18L8.29498 16.59Z" fill={revert ? '#fff' : '#24CBFF'}/>
    </svg>
</a>
<style lang="scss">
    @use '@styles/colors' as *;
    @use '@styles/mixins' as *;
    .main-link {
        display: flex;
        align-items: center;
        gap: 0 .8rem;
        margin-top: auto;
        padding: .8rem 1.6rem;
        color: $cl-cyan;
        @include sm {
            padding: .8rem 0;
        }
        svg {
            @include size(2.4rem);
            @include sm {
                @include size(1.6rem);
            }
        }
    }
</style>